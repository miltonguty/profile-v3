---
import { Code } from "astro:components";

const { data } = Astro.props;
---

<li class="ml-5">
  <div
    class="absolute -start-[10px] mt-2 h-5 w-5 rounded-full border border-neutral-600 bg-neutral-300 dark:border-neutral-600 dark:bg-neutral-800"
  >
  </div>
  <div class="">
    <time
      class="mb-2 font-mono text-xs font-normal leading-none text-neutral-600 dark:text-white"
      >{data.date}</time
    >
    <div class="mt-2 flex flex-col space-y-0.5">
      <h3
        class="text-lg font-semibold tracking-tight text-neutral-600 dark:text-white"
      >
        {data.role}
      </h3>
      <a
        href={data.company.link}
        target="_blank"
        rel="noopener"
        class="group flex w-max items-center text-pretty text-sm text-neutral-600 transition-colors duration-150 hover:text-black dark:border-neutral-800 dark:text-neutral-400 dark:hover:text-white"
        ><span>{data.company.name}</span>
      </a>
    </div>
    <p class="mt-3 text-pretty text-sm text-neutral-600 dark:text-white">
      <div set:html={data.description} />
    </p>
  </div>
</li>
